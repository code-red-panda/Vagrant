Vagrant.configure("2") do |config|

  config.vm.provider "virtualbox" do |vb|

    # Hardware
    vb.memory = 512
    vb.cpus = 1
    vb.linked_clone = true

  end

  # VM
  config.vm.define "vm", primary: true do |node|

    # OS
    node.vm.box = "ubuntu/bionic64"
    node.vm.box_version = "20200129.1.0"
    node.vm.box_check_update = false

    # Network
    node.vm.hostname = "ubuntu1804"
    node.vm.network "private_network", ip: "192.168.2.7"
    node.hostmanager.enabled = true
    node.hostmanager.manage_guest = true
    node.hostmanager.ignore_private_ip = false

  end

end
