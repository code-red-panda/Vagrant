Vagrant.configure("2") do |config|

  config.vm.provider "virtualbox" do |vb|

    # Hardware
    vb.memory = 512
    vb.cpus = 1
    vb.linked_clone = true

  end
  
  # Primary VM
  config.vm.define "centos7", primary: true do |node|

    # OS
    node.vm.box = "centos/7"
    node.vm.box_version = "1905.1"
    node.vm.box_check_update = false

    # Network
    node.vm.hostname = "centos7"
    node.vm.network "private_network", ip: "192.168.7.5"
    node.hostmanager.enabled = true
    node.hostmanager.manage_guest = true
    node.hostmanager.ignore_private_ip = false

  end

end
